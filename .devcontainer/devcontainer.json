{
    "name": "ROS 2 Jazzy & micro-ROS Dev (Universal)",
    // Use Docker Compose to build and run the container.
    // CORRECTED PATH: Path is relative to this file's location (.devcontainer).
    "dockerComposeFile": "../docker/dev_ws/docker-compose.yml",
    // The service within the docker-compose.yml file to use.
    "service": "devcontainer",
    // The workspace folder inside the container.
    "workspaceFolder": "/home/rosdev/ros2_workspaces/src/sec26_hardware"
    // This command runs ON THE HOST from the project root. This path is correct.
    "initializeCommand": "bash ./docker/dev_ws/scripts/initialize-env.sh",
    // Set the user the container will run as.
    "remoteUser": "rosdev",
    // Run install script on post-start. Path is relative to workspaceFolder inside the container.
    // CORRECTED PATH: The path needs to point to where the script is inside the mounted project volume.
    "postStartCommand": "bash -eux ./docker/dev_ws/scripts/install-dependencies.sh",
    // The rest of the configuration remains the same.
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": [
                            "-l"
                        ]
                    }
                },
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
                "C_Cpp.default.compilerPath": "/usr/bin/gcc",
                "C_Cpp.default.cStandard": "c17",
                "C_Cpp.default.cppStandard": "c++17",
                "C_Cpp.default.includePath": [
                    "${workspaceFolder}/**",
                    "/opt/ros/jazzy/include/**",
                    "/home/rosdev/.arduino15/packages/**/cores/**",
                    "/home/rosdev/.arduino15/packages/**/variants/**",
                    "/home/rosdev/.arduino15/packages/**/libraries/**/src/**",
                    "/home/rosdev/.arduino15/packages/**/tools/**/include/**",
                    "home/rosdev/Arduino/libraries/**/src/**"
                ],
                "ros.distro": "jazzy",
                "arduino.useArduinoCli": true,
                "arduino.commandPath": "arduino-cli",
                "arduino.path": "/usr/local/bin",
                "terminal.integrated.env.linux": {
                    "QT_QPA_PLATFORM": "xcb",
                    "QT_X11_NO_MITSHM": "1"
                }
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-python.python",
                "vsciot-vscode.vscode-arduino",
                "twxs.cmake",
                "redhat.vscode-yaml",
                "eamodio.gitlens",
                "ranch-hand-robotics.rde-pack",
                "davidanson.vscode-markdownlint",
                "me-dutour-mathieu.vscode-github-actions"
            ]
        }
    }
}
