# Handle line endings
* text=auto

# Explicitly force LF for files that need it
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf

# Explicitly force CRLF for Windows-specific files
*.bat text eol=crlf
*.ps1 text eol=crlf

# Data
assets/** filter=lfs diff=lfs merge=lfs -text
media/** filter=lfs diff=lfs merge=lfs -text
data/** filter=lfs diff=lfs merge=lfs -text
pcb/** filter=lfs diff=lfs merge=lfs -text
# 3D Models
*.stl filter=lfs diff=lfs merge=lfs -text
